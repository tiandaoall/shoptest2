    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎"
                android:textSize="40dp"
                >
            </TextView>
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="40dp"
                >

            </TextView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            >
            <ImageView
                android:id="@+id/waitPay"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/waitpay"
                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="20dp"
                android:layout_below="@+id/waitPay"
                android:layout_marginLeft="8dp">

            </TextView>

            <ImageView
                android:id="@+id/paid"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/waitPay"
                android:background="@drawable/paid">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待发货"
                android:textSize="20dp"
                android:layout_below="@+id/paid"
                android:layout_marginLeft="120dp">

            </TextView>

            <ImageView
                android:id="@+id/delivered"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/paid"
                android:background="@drawable/delivered">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待收货"
                android:textSize="20dp"
                android:layout_below="@+id/paid"
                android:layout_marginLeft="230dp">

            </TextView>

            <ImageView
                android:id="@+id/received"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/delivered"
                android:background="@drawable/received">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已收货"
                android:textSize="20dp"
                android:layout_below="@+id/paid"
                android:layout_marginLeft="335dp">

            </TextView>

        </RelativeLayout>
